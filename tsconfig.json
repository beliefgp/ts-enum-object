{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "allowJs": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
